<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout android:background="@android:color/white" android:layout_height="wrap_content" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" app:srcCompat="@drawable/mainshoulder" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="16dp" android:layout_marginStart="8dp" android:id="@+id/imageView"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp" android:layout_marginStart="8dp" android:id="@+id/textView" app:layout_constraintTop_toBottomOf="@+id/imageView" android:textSize="16sp" android:textColor="@android:color/black" android:text="Success"/>

    <TextView android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginStart="16dp" android:id="@+id/textView2" app:layout_constraintTop_toBottomOf="@+id/textView" android:text="Congratulations! you have successfully create a custom dialog." android:textAlignment="center"/>

    <View android:layout_height="0dp" android:layout_width="1dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:id="@+id/divider" app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintBottom_toBottomOf="parent"/>

    <Button android:background="@android:color/transparent" android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="16dp" android:layout_marginStart="16dp" android:id="@+id/btn_cancel" app:layout_constraintTop_toBottomOf="@+id/textView2" android:textColor="@android:color/holo_blue_dark" android:text="Cancel" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/divider" android:textAllCaps="false" android:stateListAnimator="@null" android:layout_marginBottom="16dp"/>

    <Button android:background="@android:color/transparent" android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginTop="16dp" android:layout_marginStart="8dp" android:id="@+id/btn_okay" app:layout_constraintTop_toBottomOf="@+id/textView2" android:textColor="@android:color/holo_blue_dark" android:text="Okay" app:layout_constraintBottom_toBottomOf="parent" android:textAllCaps="false" android:stateListAnimator="@null" android:layout_marginBottom="16dp" app:layout_constraintStart_toEndOf="@+id/divider"/>

</androidx.constraintlayout.widget.ConstraintLayout>